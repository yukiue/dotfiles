# add key binding: Alt + Ctrl + 3 to switch chromium on/off
KEYBOARD_HANDLER['3'] = {
    'modifier': X.Mod1Mask | X.ControlMask, 'command': 'switch chromium'
}

# add key binding: Alt + Ctrl + 4 to switch firefox on/off
KEYBOARD_HANDLER['4'] = {
    'modifier': X.Mod1Mask | X.ControlMask, 'command': 'switch firefox'
}

# add key binding: Alt + Ctrl + 5 to switch sendscreen on/off
KEYBOARD_HANDLER['5'] = {
    'modifier': X.Mod1Mask | X.ControlMask, 'command': 'switch sendscreen -s moon'
}

# add key binding: Alt + Ctrl + 8 to execute xrandr
KEYBOARD_HANDLER['8'] = {
    'modifier': X.Mod1Mask | X.ControlMask, 'command': 'xrandr --output DP-1 --same-as eDP-1 --mode 1920x1080'
}

# add key binding: Alt + Ctrl + 9 to access mars (timer)
KEYBOARD_HANDLER['9'] = {
    'modifier': X.Mod1Mask | X.ControlMask, 'command': 'tmux new-window -n:fserv "ssh pi@mars"'
}

# add key binding: Alt + Ctrl + 0 to access fserv
KEYBOARD_HANDLER['0'] = {
    'modifier': X.Mod1Mask | X.ControlMask, 'command': 'tmux new-window -n:fserv "ssh fserv"'
}